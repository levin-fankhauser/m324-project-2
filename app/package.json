{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:ci": "eslint . --output-file eslint_report.json --format json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "npm run lint -- --fix && npm run format",
    "test": "vitest",
    "cypress:open": "cypress open",
    "test:e2e": "wireit",
    "test:e2e:ci": "wireit"
  },
  "wireit": {
    "prepare": {
      "command": "next start",
      "dependencies": [
        "build"
      ],
      "service": {
        "readyWhen": {
          "lineMatches": "^.*localhost:3000.*$"
        }
      }
    },
    "test:e2e": {
      "command": "cypress open",
      "dependencies": [
        "prepare"
      ]
    },
    "test:e2e:ci": {
      "command": "cypress run",
      "dependencies": [
        "prepare"
      ]
    }
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.553.0",
    "next": "16.0.1",
    "prettier": "^3.6.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.1",
    "cypress": "^15.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^27.2.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.13",
    "wireit": "^0.14.12"
  }
}
